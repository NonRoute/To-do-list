<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Edit To-Do List</title>
		<link rel="stylesheet" href="css/style.css" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<header><%- include('navbar') %></header>
		<main>
			<% Object.values(todo).forEach(function(item){%>
				<div class="todo">
					<form mothod="post">
						<div class="edit-tab">
							<div class="edit-title">
								<input type="hidden" value="<%= item._id %>" name="update_id">
								<input type="text" class="title" name="title" value="<%= item.title %>" />
							</div>
							<div class="edit-button">
								<button type="submit" formaction="/update" formmethod="post" onclick="return alert('Edit success!')">Edit</button>
								<button type="submit" formaction="/delete" formmethod="post" class="del-btn" onclick="return confirm('Do you want to delete?')">Delete</button>
							</div>
						</div>
						<input
							type="datetime-local"
							class="input-date-time"
							name="datetime"
							value="<%= item.datetime %>"
						/>
						<textarea name="text"><%= item.text %></textarea>
					</form>
				</div>
			<% }) %>
		</main>
	</body>
</html>
